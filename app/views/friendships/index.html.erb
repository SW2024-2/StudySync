<body id="friend-list-page">
  <h1>フレンド一覧</h1>

  <!-- フレンド検索へのリンク -->
  <div class="search-link">
    <h3><%= link_to 'フレンドを検索する🔍', search_friendships_path %></h3>
  </div>

  <!-- フレンドリスト -->
  <% if @friends.present? %>
    <ul class="friend-list">
      <% @friends.each do |friend| %>
        <li class="friend-item">
          <div class="friend-info">
            <span><h3><strong>・名前:</strong> <%= friend.name %> | <strong>ID:</strong> <%= friend.uid %></h3></span>
          </div>
          <div class="friend-action">
            <%= button_to 'フォロー解除', friendship_path(friend), method: :delete %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="no-friends">現在、フレンドはいません。</p>
  <% end %>

  <!-- トップページに戻るリンク -->
  <div class="back-link">
    <%= link_to 'トップページに戻る', root_path %>
  </div>
</body>

<style>
  /* 全体のスタイル */
  #friend-list-page {
    text-align: center;
    margin: 0 auto;
    max-width: 800px; /* ページ全体の幅を制限 */
  }

  .search-link {
    margin-bottom: 20px;
  }

  /* フレンドリストのスタイル */
  .friend-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .friend-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    margin: 10px 20px; /* 左右にスペースを追加 */
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .friend-info {
    text-align: left;
    flex: 1; /* フレンド情報部分が広がる */
  }

  .friend-info span {
    display: block;
    font-size: 14px;
    color: #333;
  }

  .friend-info span strong {
    font-weight: bold;
  }

  .friend-action {
    margin-left: 20px;
    text-align: right;
  }

  .no-friends {
    font-size: 20px;
    color: #999;
    margin-top: 20px;
  }

  .back-link {
    margin-top: 20px;
  }
</style>
