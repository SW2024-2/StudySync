<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>ログイン</h1>
<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :uid, "ユーザーID" %>
    <%= text_field_tag :uid %>
  </div>
  <div>
    <%= label_tag :password_digest, "パスワード" %>
    <%= password_field_tag :password_digest %>
  </div>
  <div>
    <%= submit_tag "ログイン" %>
  </div>
<% end %>
<%= link_to '新規登録はこちら', new_user_path %>
