<h1>ログイン</h1>
<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :uid, "ユーザーID" %>
    <%= text_field_tag :uid %>
  </div>
  <div>
    <%= label_tag :password, "パスワード" %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "ログイン" %>
  </div>
<% end %>
<%= link_to '新規登録はこちら', new_user_path %>
