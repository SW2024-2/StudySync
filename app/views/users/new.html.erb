<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>


<h1>新規ユーザー登録</h1>

<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :uid, "ID" %>
    <%= f.text_field :uid %>
  </div>
  <div>
    <%= f.label :password_digest, "パスワード" %>
    <%= f.text_field :password_digest %>
  </div>
  
  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= link_to 'ログイン画面に戻る', login_path %>