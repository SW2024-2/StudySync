<!-- app/views/subjects/new.html.erb -->
<h1>新しい科目の作成</h1>
<%= form_with model: @subject, url: subjects_path do |form| %>
  <div>
    <%= form.label :name, "科目名" %>
    <%= form.text_field :name %>
  </div>
  
    <!-- user_idを隠しフィールドとして追加 -->
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= form.submit "作成" %>
  </div>
<% end %>
