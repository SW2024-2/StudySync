<body id="target-page">
  <h1>目標を設定する</h1>

<%= form_with model: @goal do |form| %>
  <% if @goal.errors.any? %>
    <div class="error_messages">
      <h2>エラー</h2>
      <ul>
        <% @goal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "目標のタイトル" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :study_time, "学習時間" %>
    <%= form.number_field :study_time %>
  </div>

  <%= form.submit "目標を作成する" %>
<% end %>

<%= link_to '戻る', report_index_path %>