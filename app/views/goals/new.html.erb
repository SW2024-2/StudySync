<body id="goal-page">
  <% if @report.present? %>
    <h2>「<%= @report.date_range %>」に対する新しい目標を作成</h2>
    
    <% if alert.present? %>
      <div class="alert alert-danger"><%= alert %></div> <!-- エラーメッセージの表示 -->
    <% end %>

    <%= form_with model: @goal, url: report_goals_path(@report) do |form| %>
      <% if @goal.errors.any? %>  <!-- バリデーションエラーがあった場合 -->
        <div class="alert alert-danger">
          <ul>
            <% @goal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.label :title, "目標タイトル" %>
      <%= form.text_field :title %>

      <%= form.label :study_time, "学習時間 (分)" %>
      <%= form.number_field :study_time %>

      <%= form.submit "目標を作成" %>
    <% end %>

  <% else %>
    <p>レポートが存在しません。</p>
  <% end %>
</body>
