<!-- goal/new.html.erb -->
<h2>目標を設定する</h2>

<%= form_with model: @goal do |form| %>
  <div>
    <%= form.label :title, "目標のタイトル" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :study_time, "学習時間" %>
    <%= form.number_field :study_time %>
  </div>

  <%= form.submit "目標を作成する" %>
<% end %>


<%= link_to '戻る', report_index_path %>
