<h2>目標を編集</h2>
<%= form_with model: @goal, url: update_goal_path(@goal), method: :patch, local: true do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, required: true %>
  </div>
  <div>
    <%= f.label :description, "説明" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :start_date, "開始日" %>
    <%= f.date_field :start_date %>
  </div>
  <div>
    <%= f.label :end_date, "終了日" %>
    <%= f.date_field :end_date %>
  </div>
  <div>
    <%= f.label :target_time, "目標時間 (分)" %>
    <%= f.number_field :target_time, required: true %>
  </div>
  <%= f.submit "目標を更新", class: "btn btn-primary" %>
<% end %>
